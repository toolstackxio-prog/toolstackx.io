    <script>
        // Search functionality
        document.getElementById('search-input').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const toolCards = document.querySelectorAll('.tool-card');
            
            toolCards.forEach(card => {
                const title = card.querySelector('h3').textContent.toLowerCase();
                const description = card.querySelector('p').textContent.toLowerCase();
                
                if (title.includes(searchTerm) || description.includes(searchTerm)) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        });
        
        // Tool buttons functionality
        document.querySelectorAll('.tool-btn').forEach(button => {
            button.addEventListener('click', function() {
                const toolName = this.parentElement.querySelector('h3').textContent;
                alert(`Opening ${toolName}...\n\nThis would navigate to the actual tool page in a complete implementation.`);
            });
        });
        
        // Sidebar navigation
        document.querySelectorAll('.sidebar a').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                
                // Remove active class from all links
                document.querySelectorAll('.sidebar a').forEach(item => {
                    item.classList.remove('active');
                });
                
                // Add active class to clicked link
                this.classList.add('active');
                
                const category = this.textContent;
                alert(`Loading ${category} tools...\n\nThis would filter tools by category in a complete implementation.`);
            });
        });
        
        // Header icon buttons functionality
        document.querySelectorAll('.icon-btn').forEach(button => {
            button.addEventListener('click', function() {
                if (this.querySelector('.fa-home')) {
                    alert('Navigating to homepage...');
                } else if (this.querySelector('.fa-download')) {
                    alert('Download section would open here...');
                } else if (this.querySelector('.fa-share-alt')) {
                    alert('Share options would appear here...');
                }
            });
        });
        
        // Display welcome message
        window.onload = function() {
            console.log('ToolStackX.io loaded successfully!');
            console.log('All navigation elements are now functional.');
        };
    </script>
