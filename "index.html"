        };
        
        // Initialize with basic example
        window.onload = function() {
            htmlEditor.value = examples.basic;
            updatePreview();
        };
        
        // Update preview function
        function updatePreview() {
            const htmlCode = htmlEditor.value;
            const iframeDoc = previewFrame.contentDocument || previewFrame.contentWindow.document;
            
            iframeDoc.open();
            iframeDoc.write(htmlCode);
            iframeDoc.close();
        }
        
        // Clear editor
        function clearEditor() {
            if (confirm('Are you sure you want to clear the editor?')) {
                htmlEditor.value = '';
                updatePreview();
            }
        }
        
        // Load example
        function loadExample(exampleName) {
            htmlEditor.value = examples[exampleName];
            updatePreview();
        }
        
        // Toggle fullscreen
        function toggleFullscreen() {
            const isFullscreen = previewContainer.classList.contains('fullscreen');
            
            if (!isFullscreen) {
                // Enter fullscreen
                previewContainer.classList.add('fullscreen');
                
                // Create close button
                const closeBtn = document.createElement('button');
                closeBtn.className = 'fullscreen-close';
                closeBtn.innerHTML = '‚úï';
                closeBtn.onclick = toggleFullscreen;
                document.body.appendChild(closeBtn);
            } else {
                // Exit fullscreen
                previewContainer.classList.remove('fullscreen');
                
                // Remove close button
                const closeBtn = document.querySelector('.fullscreen-close');
                if (closeBtn) {
                    closeBtn.remove();
                }
            }
        }
        
        // Auto-update preview when typing (optional - can be resource intensive)
        // htmlEditor.addEventListener('input', updatePreview);
    </script>
</body>
</html>
