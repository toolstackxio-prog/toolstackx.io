  </div>  <script>
    // ====== Configuration: change these image objects to customize ======
    const IMAGES = [
      {src:'https://picsum.photos/id/1015/1600/1000', title:'Mountain View', desc:'Tall mountains, serene lake.'},
      {src:'https://picsum.photos/id/1016/1600/1000', title:'Forest Path', desc:'A misty path through green forest.'},
      {src:'https://picsum.photos/id/1025/1600/1000', title:'Sea Horizon', desc:'Open sea with golden hour light.'},
      {src:'https://picsum.photos/id/1005/1600/1000', title:'Desert Dunes', desc:'Wind-sculpted sand dunes.'},
      {src:'https://picsum.photos/id/1035/1600/1000', title:'City Skyline', desc:'Sunset over glass towers.'}
    ];
    // ==================================================================

    const flipperInner = document.getElementById('flipperInner');
    const mainImage = document.getElementById('mainImage');
    const titleText = document.getElementById('titleText');
    const imgDesc = document.getElementById('imgDesc');
    const imgRes = document.getElementById('imgRes');
    const imgIndex = document.getElementById('imgIndex');
    const pager = document.getElementById('pager');
    const thumbs = document.getElementById('thumbs');
    const autoRotateChk = document.getElementById('autoRotate');
    const loopChk = document.getElementById('loop');
    const playPauseBtn = document.getElementById('playPause');
    const flipBtn = document.getElementById('flipBtn');
    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');

    let idx = 0; let autoId = null; let isFlipped = false; let playing = true; let swipeStartX = null;

    function render(){
      const img = IMAGES[idx];
      mainImage.src = img.src; titleText.textContent = img.title; imgDesc.textContent = img.desc; imgIndex.textContent = (idx+1)+' / '+IMAGES.length;
      // try to show resolution by parsing URL size if available
      imgRes.textContent = (img.src.match(/\/(\d+)\/(\d+)(?:$|\D)/) || ['','-','-']).slice(1,3).join('×');
      // pager dots
      pager.innerHTML = '';
      IMAGES.forEach((_,i)=>{
        const d = document.createElement('div'); d.className='dot'+(i===idx? ' active':''); d.addEventListener('click',()=>jump(i)); pager.appendChild(d);
      });
      // thumbs
      thumbs.innerHTML='';
      IMAGES.forEach((it,i)=>{
        const t=document.createElement('div'); t.className='thumb'+(i===idx?' active':''); t.innerHTML='<img src="'+it.src+'" alt="t">'; t.addEventListener('click',()=>jump(i)); thumbs.appendChild(t);
      });
      // ensure front is visible when image changes
      if(isFlipped) toggleFlip(false);
    }

    function jump(i){ idx=i; render(); resetAuto(); }
    function prev(){ idx = (idx-1 + IMAGES.length) % IMAGES.length; render(); resetAuto(); }
    function next(){ idx = idx+1; if(idx>=IMAGES.length){ if(loopChk.checked) idx=0; else { idx = IMAGES.length-1; pause(); }} render(); resetAuto(); }

    function toggleFlip(force){ if(typeof force==='boolean') isFlipped=force; else isFlipped = !isFlipped; flipperInner.classList.toggle('is-flipped', isFlipped); }

    flipBtn.addEventListener('click', ()=>{ toggleFlip(); animateButton(flipBtn); });
    prevBtn.addEventListener('click', ()=>{ prev(); animateButton(prevBtn); });
    nextBtn.addEventListener('click', ()=>{ next(); animateButton(nextBtn); });

    mainImage.addEventListener('click', ()=>toggleFlip());

    playPauseBtn.addEventListener('click', ()=>{ if(playing) pause(); else play(); animateButton(playPauseBtn); });
    function play(){ playing=true; playPauseBtn.textContent='Pause'; startAuto(); }
    function pause(){ playing=false; playPauseBtn.textContent='Play'; stopAuto(); }

    function startAuto(){ stopAuto(); if(!autoRotateChk.checked) return; autoId = setInterval(()=> next(), 3500); }
    function stopAuto(){ if(autoId) { clearInterval(autoId); autoId=null; } }
    function resetAuto(){ if(playing) startAuto(); }

    // Small click ripple/transform animation for buttons
    function animateButton(btn){ btn.animate([{transform:'translateY(0) scale(1)'},{transform:'translateY(-6px) scale(1.02)'},{transform:'translateY(0) scale(1)'}],{duration:420,easing:'cubic-bezier(.2,.9,.2,1)'}); }

    // keyboard
    document.addEventListener('keydown', (e)=>{
      if(e.key==='ArrowLeft') prev();
      if(e.key==='ArrowRight') next();
      if(e.code==='Space') { e.preventDefault(); toggleFlip(); }
    });

    // simple touch swipe for mobile
    const flipper = document.getElementById('flipper');
    flipper.addEventListener('touchstart',(e)=>{ swipeStartX = e.changedTouches[0].clientX; });
    flipper.addEventListener('touchend',(e)=>{ if(!swipeStartX) return; const d = e.changedTouches[0].clientX - swipeStartX; if(Math.abs(d) > 40){ if(d>0) prev(); else next(); } swipeStartX=null; });

    // download current image
    document.getElementById('downloadBtn').addEventListener('click', ()=>{
      const url = IMAGES[idx].src; const a = document.createElement('a'); a.href=url; a.download = url.split('/').slice(-1)[0] || 'image.jpg'; document.body.appendChild(a); a.click(); a.remove(); animateButton(document.getElementById('downloadBtn'));
    });

    // init
    render(); startAuto();

    // small accessibility improvements
    [prevBtn,nextBtn,flipBtn,playPauseBtn].forEach(b=>b.setAttribute('aria-pressed','false'));

  </script></body>
</html>
